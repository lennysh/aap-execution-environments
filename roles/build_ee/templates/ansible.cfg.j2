[galaxy]
server_list = automation_hub_cert,automation_hub_pub,automation_hub_comm,automation_hub_val,release_galaxy
ignore_certs = no

[galaxy_server.automation_hub_cert]
url=https://console.redhat.com/api/automation-hub/content/rh-certified/
auth_url=https://sso.redhat.com/auth/realms/redhat-external/protocol/openid-connect/token
token={{ registry_token }}

[galaxy_server.automation_hub_pub]
url=https://console.redhat.com/api/automation-hub/content/published/
auth_url=https://sso.redhat.com/auth/realms/redhat-external/protocol/openid-connect/token
token={{ registry_token }}

[galaxy_server.automation_hub_comm]
url=https://console.redhat.com/api/automation-hub/content/community/
auth_url=https://sso.redhat.com/auth/realms/redhat-external/protocol/openid-connect/token
token={{ registry_token }}

[galaxy_server.automation_hub_val]
url=https://console.redhat.com/api/automation-hub/content/validated/
auth_url=https://sso.redhat.com/auth/realms/redhat-external/protocol/openid-connect/token
token={{ registry_token }}

[galaxy_server.release_galaxy]
url=https://galaxy.ansible.com/
